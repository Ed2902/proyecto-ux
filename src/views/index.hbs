<main class="main">
    <!-- Carousel Start -->
    <div class="container-fluid p-0 mb-5" data-aos="fade-in">
        <div id="blog-carousel" class="carousel slide overlay-bottom" data-bs-ride="carousel" data-bs-interval="3000">
            <div class="carousel-inner">
                <!-- Slide 1 -->
                <div class="carousel-item active">
                    <img class="w-100" src="img/carousel-1.jpg" alt="Image">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <h2 class="text-primary font-weight-medium m-0">"Live in balance"</h2>
                        <h1 class="display-1 m-0 text-custom-color">Buenos aires</h1>
                        <h2 class="text-white m-0">2024</h2>
                    </div>
                </div>
                <!-- Slide 2 -->
                <div class="carousel-item">
                    <img class="w-100" src="../img/carousel-3.jpg" alt="Image">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <h2 class="text-primary font-weight-medium m-0">"City to Explore"</h2>
                        <h1 class="display-1 text-custom-color m-0">Bogotá</h1>
                        <h2 class="text-white m-0">2024</h2>
                    </div>
                </div>
                <!-- Slide 3 -->
                <div class="carousel-item">
                    <img class="w-100" src="img/carousel-6.jpg" alt="Image">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center" style="transform: translate(-150px, -150px);">
                        <h2 class="text-primary font-weight-medium m-0">"Medellin"</h2>
                        <h1 class="display-1 text-custom-color m-0">"Magic at Every Turn"</h1>
                        <h2 class="text-white m-0">2024</h2>
                    </div>
                </div>
                <!-- Slide 4 -->
                <div class="carousel-item">
                    <img class="w-100" src="img/carousel-4.jpg" alt="Image">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <h2 class="text-primary font-weight-medium m-0"></h2>
                        <h1 class="display-1 text-custom-color m-0"></h1>
                        <h2 class="text-white m-0"></h2>
                    </div>
                </div>
            </div>

            <!-- Carousel Controls -->
            <a class="carousel-control-prev" href="#blog-carousel" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#blog-carousel" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <!-- Carousel End -->

    <div class="busqueda-index flex" data-aos="fade-up">
        <div class="busqueda-item" data-aos="fade-right">
            <h6 class="titulo-item">Destino</h6>
            <div class="subitem flex">
                <i class="fi fi-ts-marker icono-index"></i>
                <div class="dropdown">
                    <input id="dropdownBuscar" class="dropdownBtn subtitulo-item" placeholder="Elige tu destino">
                    <div id="dropContenido" class="dropdown-content">
                        {{#each Hoteles}}
                        <div class="datos-ciudad">
                            <span class="ciudad"><i class="fi fi-ts-marker icono-drop"></i>{{this.Nombre_Ciudad}}, {{this.Nombre_Pais}}</span>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        <div class="busqueda-item" id="abrir-modal" data-aos="fade-left">
            <h6 class="titulo-item itemT">Llegada</h6>
            <div class="subitem flex">
                <i class="fi fi-tr-calendar-clock icono-index"></i>
                <h2 id="llegada" class="subtitulo-item">Agregar Fecha</h2>
            </div>
        </div>
        <div class="busqueda-item" data-aos="fade-right">
            <h6 class="titulo-item itemT">Salida</h6>
            <div class="subitem flex">
                <i class="fi fi-tr-calendar-clock icono-index"></i>
                <h2 id="salida" class="subtitulo-item">Agregar Fecha</h2>
            </div>
        </div>
        <div class="busqueda-item" id="abrir-huesped" data-aos="fade-left">
            <h6 class="titulo-item">Personas/Habitaciones</h6>
            <div class="subitem flex">
                <i class="fi fi-tr-users icono-index"></i>
                <h2 id="huesped/habitacion" class="subtitulo-item">2 Huespedes, 1 Habitacion</h2>
            </div>
        </div>
    </div>
    <div class="btn-buscar" id="btn-buscar" data-aos="zoom-in">
        <a class="txt-buscar">Buscar</a>
    </div>

    {{!-- MODAL CALENDARIO --}}
    <div id="calendarModal" class="modal" data-aos="fade-up">
        <div class="modal-contenido">
            <div class="calendario">
                <div class="calenHeader">
                    <button id="prevbtn" class="btn-calendario">
                        <i class="fas fa-angle-left"></i>
                    </button>
                    <h2 id="mesActual"></h2>
                    <button id="nextbtn">
                        <i class="fas fa-angle-right"></i>
                    </button>    
                </div>
                <div class="dias-sem">
                    <span>Dom</span>
                    <span>Lun</span>
                    <span>Mar</span>
                    <span>Mie</span>
                    <span>Jue</span>
                    <span>Vie</span>
                    <span>Sab</span>
                </div>
                <div id="calenBody" class="calenBody">
                </div>
            </div>
        </div>
    </div>

    {{!-- MODAL HUESPEDES/HABITACIONES --}}
    <div id="huespedModal" class="modal" data-aos="fade-up">
        <div class="modal-contenido">
            <div class="calendario">
                <div class="huesped flex-huesped" data-aos="fade-right">
                    <h2 class="text-huesped">Adultos</h2>
                    <div class="flex">
                        <i id="menos" class="fi fi-tr-minus-circle icono-huesped"></i>
                        <h3 id="cantidad" class="cont-huesped">0</h3>
                        <i id="mas" class="fi fi-tr-add icono-huesped"></i>
                    </div>
                </div>
                <div class="huesped flex-huesped" data-aos="fade-left">
                    <h2 class="text-huesped">Niños</h2>
                    <div class="flex">
                        <i id="menos1" class="fi fi-tr-minus-circle icono-huesped"></i>
                        <h3 id="cantidad1" class="cont-huesped">0</h3>
                        <i id="mas1" class="fi fi-tr-add icono-huesped"></i>
                    </div>
                </div>
                <div class="huesped flex-huesped" data-aos="fade-right">
                    <h2 class="text-huesped">Habitaciones</h2>
                    <div class="flex">
                        <i id="menos2" class="fi fi-tr-minus-circle icono-huesped"></i>
                        <h3 id="cantidad2" class="cont-huesped">0</h3>
                        <i id="mas2" class="fi fi-tr-add icono-huesped"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

