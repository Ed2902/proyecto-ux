    <section class="sec2" data-aos="fade-up">
        <h2 class="sec2-titulo">Disfruta con nosotros</h2>
        <br>
        <div class="gal-flex">
            <div class="img-sec2" data-aos="zoom-in">
                <img class="img-gal" src="../img/img-gal.jpg" alt="">
